<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/banana_about_title">

    <PreferenceScreen
        android:layout="@layout/banana_logo_about"
        android:key="banana_logo_about"
        android:selectable="false" />

    <PreferenceCategory
        android:key="banana_about_link"
        android:title="@string/banana_about_link" />

        <Preference
            android:title="@string/banana_website_title"
            android:summary="@string/banana_website_summary"
            settings:layout="@layout/banana_about_link"
            android:icon="@drawable/ic_website">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://bananadroid.com" />
        </Preference>

        <Preference
            android:title="@string/banana_telegram_title"
            android:summary="@string/banana_telegram_summary"
            settings:layout="@layout/banana_about_link"
            android:icon="@drawable/ic_telegram">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/bananadroid" />
        </Preference>

        <Preference
            android:title="@string/banana_github_title"
            android:summary="@string/banana_github_summary"
            settings:layout="@layout/banana_about_link"
            android:icon="@drawable/ic_github">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/bananadroid" />
        </Preference>

    <PreferenceCategory
        android:key="about_team"
        android:title="@string/banana_about_team" />

        <Preference
            android:title="@string/banana_about_travarilo"
            android:summary="@string/banana_about_travarilo_summary"
            android:icon="@drawable/travarilo"
            settings:layout="@layout/banana_about">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/travarilo" />
        </Preference>

</PreferenceScreen>
